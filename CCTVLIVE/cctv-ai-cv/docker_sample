FROM ubuntu:latest

ARG DEBIAN_FRONTEND=noninteractive

RUN mkdir /app
# ADD . /app
COPY . /app/
WORKDIR /app

RUN apt-get update && apt-get -y upgrade && apt install -y \
    apt-utils \
    build-essential \
    pkg-config \
    python3.10 \
    python3.10-distutils \
    python3-pip \
    libcurl4-openssl-dev \
    nano \
    gcc \
    curl \
    unixodbc-dev \
    unixodbc \
    ffmpeg \
    libopencv-highgui-dev && \
    apt-get autoremove -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

RUN pip install --upgrade pip==21.1.1

RUN pip install -r requirements.txt

# RUN apt-get -y update && apt-get -y upgrade && apt install -y ffmpeg
ENV PYTHONPATH=/app

